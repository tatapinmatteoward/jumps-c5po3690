---
import Layout from '../layouts/Layout.astro';

const features = [
  { 
    icon: 'fas fa-bullseye', 
    title: 'Precision Tracking', 
    text: 'Real-time metrics on jumps, speed, and endurance using AI-powered sensors.' 
  },
  { 
    icon: 'fas fa-brain', 
    title: 'Smart Insights', 
    text: 'AI-driven analytics that identify patterns and performance gaps.' 
  },
  { 
    icon: 'fas fa-chart-line', 
    title: 'Performance Trends', 
    text: 'Visualize progress over time with intuitive dashboards and reports.' 
  }
];

const missionPoints = [
  'Founded by data scientists, coaches, and former players',
  'Harnessing futuristic tech-inspired tools for unprecedented insights',
  'Empowering athletes, trainers, and teams to reach new heights'
];

const pageTitle = "About JumpStats Pro";
const pageDescription = "Discover the story behind JumpStats Pro, the cutting-edge platform revolutionizing basketball analytics with futuristic technology and in-depth insights to elevate players and teams.";
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
    {`
      @keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }
      
      .neon-glow {
        box-shadow: 0 0 15px rgba(255, 234, 0, 0.7);
      }
      
      .gradient-border {
        position: relative;
        border-radius: 12px;
        padding: 2px;
      }
      
      .gradient-border::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, #6a0dad, #ffea00, #6a0dad);
        background-size: 400% 400%;
        border-radius: 12px;
        z-index: -1;
        animation: gradientShift 8s ease infinite;
      }
      
      .tech-grid {
        background-image: 
          linear-gradient(rgba(106, 13, 173, 0.1) 1px, transparent 1px),
          linear-gradient(90deg, rgba(106, 13, 173, 0.1) 1px, transparent 1px);
        background-size: 30px 30px;
      }
    `}
  </style>

  {/* Hero Section */}
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-900 via-indigo-900 to-blue-900 opacity-90"></div>
    <div class="absolute inset-0 tech-grid"></div>
    
    <div class="relative container mx-auto px-4 py-32 text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-yellow-300 to-purple-400 mb-6 animate-pulse">
        About JumpStats Pro
      </h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto leading-relaxed">
        <span class="font-bold">Elevate Your Game with Advanced Basketball Analytics</span>
      </p>
      
      <div class="mt-12 flex justify-center">
        <div class="w-32 h-1 bg-gradient-to-r from-purple-500 to-yellow-400 rounded-full"></div>
      </div>
    </div>
    
    <div class="absolute bottom-0 left-0 right-0 h-20 bg-gradient-to-t from-gray-900 to-transparent"></div>
  </div>

  {/* Mission Section */}
  <section class="py-20 bg-gradient-to-br from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="lg:w-1/2">
          <h2 class="text-4xl font-bold text-white mb-6">
            Our <span class="text-yellow-400">Mission</span>
          </h2>
          
          <div class="space-y-6">
            {missionPoints.map((point, index) => (
              <div key={index} class="flex items-start">
                <div class="mt-1 mr-4 text-yellow-400">
                  <i class="fas fa-circle text-xs"></i>
                </div>
                <p class="text-gray-300 text-lg leading-relaxed">{point}</p>
              </div>
            ))}
          </div>
          
          <div class="mt-10 p-6 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-purple-500/30">
            <p class="text-gray-200 text-lg italic">
              "Basketball is more than a game – it's a science. We blend cutting-edge technology with deep basketball knowledge to transform how players and teams prepare for greatness."
            </p>
            <p class="text-yellow-400 mt-4 font-semibold">– Founder & Lead Developer</p>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <div class="relative">
            <div class="gradient-border">
              <div class="bg-gray-900 border border-gray-800 rounded-xl p-8">
                <div class="flex justify-center mb-6">
                  <div class="w-24 h-24 rounded-full bg-gradient-to-r from-purple-600 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-rocket text-black text-4xl"></i>
                  </div>
                </div>
                
                <h3 class="text-2xl font-bold text-white text-center mb-4">Revolutionary Platform</h3>
                
                <div class="space-y-4">
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
                    <span class="text-gray-300">Real-time Data Processing</span>
                  </div>
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
                    <span class="text-gray-300">Machine Learning Insights</span>
                  </div>
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
                    <span class="text-gray-300">3D Motion Analytics</span>
                  </div>
                  <div class="flex items-center">
                    <div class="w-3 h-3 rounded-full bg-green-400 mr-3"></div>
                    <span class="text-gray-300">Cross-Platform Compatibility</span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="absolute -top-4 -right-4 w-24 h-24 rounded-lg bg-purple-600/20 blur-xl"></div>
            <div class="absolute -bottom-4 -left-4 w-32 h-32 rounded-full bg-yellow-400/10 blur-2xl"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Features Section */}
  <section class="py-20 bg-gradient-to-br from-black to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Transformative <span class="text-yellow-400">Features</span></h2>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg">
          Cutting-edge technology designed to give you unprecedented insights into your basketball performance
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div 
            key={index} 
            class="group relative bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl p-8 transition-all duration-500 hover:border-yellow-400/50 hover:shadow-xl hover:shadow-yellow-400/10"
          >
            <div class="flex justify-center mb-6">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-purple-600 to-yellow-400 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <i class={`${feature.icon} text-black text-2xl`}></i>
              </div>
            </div>
            
            <h3 class="text-2xl font-bold text-white text-center mb-4">{feature.title}</h3>
            <p class="text-gray-300 text-center leading-relaxed">{feature.text}</p>
            
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-purple-600/10 to-yellow-400/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Stats & Impact Section */}
  <section class="py-20 bg-gradient-to-r from-purple-900/30 via-black to-indigo-900/30">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Our <span class="text-yellow-400">Impact</span></h2>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg">
          Trusted by professional teams and elite athletes worldwide
        </p>
      </div>
      
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center p-6">
          <div class="text-5xl font-bold text-yellow-400 mb-2">500+</div>
          <div class="text-gray-300">Teams Trained</div>
        </div>
        
        <div class="text-center p-6">
          <div class="text-5xl font-bold text-yellow-400 mb-2">10K+</div>
          <div class="text-gray-300">Athletes Empowered</div>
        </div>
        
        <div class="text-center p-6">
          <div class="text-5xl font-bold text-yellow-400 mb-2">98%</div>
          <div class="text-gray-300">Satisfaction Rate</div>
        </div>
        
        <div class="text-center p-6">
          <div class="text-5xl font-bold text-yellow-400 mb-2">25+</div>
          <div class="text-gray-300">Countries Reached</div>
        </div>
      </div>
      
      <div class="mt-20 grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h3 class="text-3xl font-bold text-white mb-6">The Future is Now</h3>
          <p class="text-gray-300 text-lg leading-relaxed mb-6">
            JumpStats Pro doesn't just measure performance – it predicts potential. Our advanced algorithms analyze thousands of data points to reveal hidden patterns and opportunities for growth that traditional methods miss.
          </p>
          <p class="text-gray-400 leading-relaxed">
            Whether you're a college player aiming for the pros, a coach developing talent, or a professional seeking the competitive edge, our platform transforms the way basketball intelligence is gathered and applied.
          </p>
        </div>
        
        <div class="relative">
          <div class="gradient-border bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl p-8">
            <div class="grid grid-cols-2 gap-4 mb-6">
              <div class="bg-gray-800/50 p-4 rounded-lg">
                <div class="text-yellow-400 text-3xl font-bold">89%</div>
                <div class="text-gray-400 text-sm">Performance Improvement</div>
              </div>
              <div class="bg-gray-800/50 p-4 rounded-lg">
                <div class="text-yellow-400 text-3xl font-bold">42%</div>
                <div class="text-gray-400 text-sm">Injury Prevention</div>
              </div>
              <div class="bg-gray-800/50 p-4 rounded-lg">
                <div class="text-yellow-400 text-3xl font-bold">67%</div>
                <div class="text-gray-400 text-sm">Decision Making Speed</div>
              </div>
              <div class="bg-gray-800/50 p-4 rounded-lg">
                <div class="text-yellow-400 text-3xl font-bold">91%</div>
                <div class="text-gray-400 text-sm">Training Efficiency</div>
              </div>
            </div>
            
            <div class="mt-6 flex flex-col items-center">
              <div class="w-32 h-1 bg-gradient-to-r from-purple-500 to-yellow-400 rounded-full mb-4"></div>
              <div class="text-yellow-400 font-bold">Data-Driven Excellence</div>
            </div>
          </div>
          
          <div class="absolute -top-4 -left-4 w-16 h-16 rounded-full bg-purple-600/30 blur-xl"></div>
          <div class="absolute -bottom-4 -right-4 w-24 h-24 rounded-full bg-yellow-400/20 blur-xl"></div>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-br from-gray-900 to-black">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Elevate Your Game?</h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg mb-10">
        Join thousands of athletes and coaches who have transformed their performance with JumpStats Pro
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-gradient-to-r from-purple-600 to-yellow-400 text-black font-bold rounded-full hover:from-purple-500 hover:to-yellow-300 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-purple-500/30">
          Get Started Free
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-purple-500 text-white font-bold rounded-full hover:bg-purple-500/20 transition-all duration-300">
          Schedule Demo
        </button>
      </div>
      
      <div class="mt-12 flex justify-center">
        <div class="inline-flex items-center px-6 py-3 bg-gray-800 rounded-full">
          <i class="fas fa-lock text-green-400 mr-2"></i>
          <span class="text-gray-300">Secure • Private • Encrypted</span>
        </div>
      </div>
    </div>
  </section>
</Layout>