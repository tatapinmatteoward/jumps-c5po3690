---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Advanced Analytics Dashboard";
const pageDescription = "Unlock the power of data-driven insights with JumpStats Pro's futuristic analytics page, where vibrant visualizations and neon-highlighted metrics elevate your basketball game to pro levels.";

const features = [
  {
    icon: "fas fa-bullseye",
    title: "Precision Tracking",
    description: "Monitor jump heights, shot trajectories, and player movements with sub-millisecond accuracy using our neon-illuminated motion capture tech."
  },
  {
    icon: "fas fa-chart-line",
    title: "Vibrant Visualizations",
    description: "Dive into interactive charts and heatmaps with gradient-infused designs that make data pop like a highlight reel."
  },
  {
    icon: "fas fa-brain",
    title: "Predictive Insights",
    description: "Leverage machine learning to forecast performance trends and optimize training regimens for peak performance."
  }
];

const stats = [
  { value: "99.7%", label: "Accuracy Rate" },
  { value: "2.3s", label: "Data Processing Speed" },
  { value: "10x", label: "Performance Improvement" },
  { value: "24/7", label: "Real-time Monitoring" }
];

const chartData = [
  { name: "Jump Height", value: 85 },
  { name: "Shot Accuracy", value: 78 },
  { name: "Speed", value: 92 },
  { name: "Agility", value: 88 }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCI+CjxyZWN0IHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgZmlsbD0ibm9uZSIvPgo8Y2lyY2xlIGN4PSIzMCIgY3k9IjMwIiByPSIxIiBmaWxsPSIjZmZlYTAwIiBvcGFjaXR5PSIwLjEiLz4KPC9zdmc+')] opacity-20"></div>
    
    <div class="container mx-auto px-4 py-24 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1 mb-4 text-sm font-semibold text-yellow-400 bg-yellow-900/30 rounded-full border border-yellow-500/30">
          <i class="fas fa-bolt mr-2"></i> Futuristic Analytics
        </span>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Elevate Your Game with <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-200">Advanced Basketball Analytics</span>
        </h1>
        <p class="text-xl text-purple-200 mb-8 max-w-2xl">
          Unlock the power of data-driven insights with JumpStats Pro's futuristic analytics page, where vibrant visualizations and neon-highlighted metrics elevate your basketball game to pro levels.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="px-8 py-4 bg-gradient-to-r from-yellow-500 to-yellow-600 text-gray-900 font-bold rounded-lg hover:from-yellow-400 hover:to-yellow-500 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-yellow-500/30">
            Start Free Trial
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-yellow-500 text-yellow-400 font-bold rounded-lg hover:bg-yellow-500/10 transition-all duration-300">
            View Demo
          </button>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-0 left-0 right-0 h-20 bg-gradient-to-t from-gray-900 to-transparent"></div>
  </div>

  <!-- Stats Section -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-gray-950">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat, index) => (
          <div key={index} class="text-center p-6 rounded-xl bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 hover:border-yellow-500/50 transition-all duration-300">
            <div class="text-4xl font-bold text-yellow-400 mb-2">{stat.value}</div>
            <div class="text-gray-300">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gradient-to-b from-gray-950 to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Choose JumpStats Pro Analytics?</h2>
        <p class="text-xl text-purple-200 max-w-3xl mx-auto">
          Cutting-edge technology designed specifically for basketball excellence
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="group p-8 rounded-2xl bg-gradient-to-br from-gray-800 to-gray-900 border border-gray-700/50 hover:border-yellow-500/50 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 rounded-full bg-gradient-to-r from-yellow-500 to-yellow-600 flex items-center justify-center mb-6 text-gray-900 group-hover:scale-110 transition-transform duration-300">
              <i class={`${feature.icon} text-2xl`}></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">{feature.title}</h3>
            <p class="text-gray-300 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Visualization Section -->
  <section class="py-20 bg-gradient-to-b from-gray-900 to-gray-950">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12 items-center">
        <div class="lg:w-1/2">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Interactive Performance Charts</h2>
          <p class="text-xl text-purple-200 mb-8">
            Real-time data visualization that brings your athletic performance to life with stunning graphics.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full bg-yellow-500 mr-4"></div>
              <span class="text-gray-300">Jump Height Analysis</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full bg-blue-500 mr-4"></div>
              <span class="text-gray-300">Shot Trajectory Mapping</span>
            </div>
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full bg-green-500 mr-4"></div>
              <span class="text-gray-300">Player Movement Heatmaps</span>
            </div>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-yellow-500/10 to-purple-500/10 rounded-2xl blur-xl"></div>
            <div class="relative bg-gray-800/70 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-8">
              <div class="space-y-6">
                {chartData.map((item, index) => (
                  <div key={index} class="space-y-2">
                    <div class="flex justify-between text-gray-300">
                      <span>{item.name}</span>
                      <span class="text-yellow-400">{item.value}%</span>
                    </div>
                    <div class="h-3 bg-gray-700 rounded-full overflow-hidden">
                      <div 
                        class="h-full bg-gradient-to-r from-yellow-500 to-yellow-400 rounded-full"
                        style={{ width: `${item.value}%` }}
                      ></div>
                    </div>
                  </div>
                ))}
              </div>
              
              <div class="mt-10 pt-6 border-t border-gray-700/50">
                <div class="flex justify-between text-sm text-gray-400">
                  <span>0%</span>
                  <span>50%</span>
                  <span>100%</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-purple-900/50 to-pink-900/50 border-y border-gray-800">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Transform Your Performance?</h2>
      <p class="text-xl text-purple-200 mb-10 max-w-3xl mx-auto">
        Join thousands of athletes and coaches using JumpStats Pro to gain competitive advantages with data-driven insights.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-gradient-to-r from-yellow-500 to-yellow-600 text-gray-900 font-bold rounded-lg hover:from-yellow-400 hover:to-yellow-500 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-yellow-500/30">
          Get Started Today
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-yellow-500 text-yellow-400 font-bold rounded-lg hover:bg-yellow-500/10 transition-all duration-300">
          Schedule a Demo
        </button>
      </div>
    </div>
  </section>
</Layout>