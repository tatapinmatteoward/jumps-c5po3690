---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us - HoopsHaven Central";
const pageDescription = "Connect with the HoopsHaven Central team for basketball training inquiries, performance coaching, or partnership opportunities. We're passionate about helping you reach your full potential on the court.";

const contactFeatures = [
  {
    icon: "fas fa-user-friends",
    title: "Personalized Training Advice",
    description: "Get tailored recommendations to boost your skills."
  },
  {
    icon: "fas fa-calendar-check",
    title: "Booking Sessions",
    description: "Secure your spot for one-on-one coaching or group clinics."
  },
  {
    icon: "fas fa-calendar-alt",
    title: "Event Inquiries",
    description: "Learn about upcoming workshops, camps, and tournaments."
  },
  {
    icon: "fas fa-handshake",
    title: "Partnerships & Sponsorships",
    description: "Collaborate with us to support local basketball initiatives."
  }
];

const socialLinks = [
  { name: "Instagram", icon: "fab fa-instagram", url: "#" },
  { name: "Facebook", icon: "fab fa-facebook-f", url: "#" },
  { name: "Twitter", icon: "fab fa-twitter", url: "#" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
    {`
      @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Merriweather:wght@300;400;700&display=swap');
      
      .serif-font {
        font-family: 'Playfair Display', serif;
      }
      
      .sans-serif-font {
        font-family: 'Merriweather', serif;
      }
      
      .rustic-border {
        border: 2px solid #0d4730;
      }
      
      .rustic-bg {
        background-color: #f9f5f0;
      }
      
      .contact-card {
        transition: all 0.3s ease;
        box-shadow: 0 10px 25px rgba(13, 71, 48, 0.1);
      }
      
      .contact-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(13, 71, 48, 0.2);
      }
      
      .hero-gradient {
        background: linear-gradient(135deg, #0d4730 0%, #1a6a47 100%);
      }
      
      .accent-text {
        color: #ff6b6b;
      }
    `}
  </style>

  <!-- Hero Section -->
  <div class="hero-gradient py-24 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-full opacity-10">
      <div class="w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="serif-font text-5xl md:text-6xl font-bold text-white mb-6">Contact Us</h1>
        <p class="sans-serif-font text-xl text-white/90 mb-8">
          Your Central Hub for Basketball Training and Performance
        </p>
        <div class="w-24 h-1 bg-accent-text mx-auto"></div>
      </div>
    </div>
  </div>

  <!-- Intro Section -->
  <section class="py-16 rustic-bg">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block bg-white px-6 py-3 rounded-full mb-8 rustica-border">
          <span class="font-bold text-primary">Welcome to HoopsHaven Central</span>
        </div>
        
        <p class="sans-serif-font text-xl text-gray-800 mb-10 leading-relaxed">
          At HoopsHaven Central, we're more than just a training facilityâ€”we're your partners in elevating your basketball game. 
          Whether you're a budding athlete, a seasoned player, or a coach seeking resources, our door is always open. 
          Nestled in an elegant rustic setting that blends the thrill of the court with the warmth of community, we invite you to reach out.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4 mt-12">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-primary rounded-full mr-2"></div>
            <span class="sans-serif-font font-medium text-gray-700">Personalized Coaching</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-primary rounded-full mr-2"></div>
            <span class="sans-serif-font font-medium text-gray-700">Community Focus</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-primary rounded-full mr-2"></div>
            <span class="sans-serif-font font-medium text-gray-700">Performance Excellence</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="serif-font text-4xl font-bold text-primary mb-4">Why Contact Us?</h2>
        <div class="w-20 h-1 bg-accent-text mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {contactFeatures.map((feature, index) => (
          <div class="contact-card bg-white rounded-xl p-8 text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <i class={`${feature.icon} text-2xl text-primary`}></i>
            </div>
            <h3 class="sans-serif-font text-xl font-bold text-gray-800 mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 bg-[#0d4730]/5">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="serif-font text-4xl font-bold text-primary mb-4">Get In Touch</h2>
          <p class="sans-serif-font text-lg text-gray-700 max-w-2xl mx-auto">
            Have questions about our programs? Want to schedule a session? Fill out the form below and our team will get back to you soon.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/2 bg-primary p-10 text-white">
              <h3 class="serif-font text-3xl font-bold mb-6">Contact Information</h3>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <i class="fas fa-map-marker-alt mt-1 text-accent-text text-xl mr-4"></i>
                  <div>
                    <h4 class="font-bold text-lg mb-1">Visit Us</h4>
                    <p>123 Court Avenue<br />Basketball District<br />Hoopsville, HV 12345</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <i class="fas fa-phone-alt mt-1 text-accent-text text-xl mr-4"></i>
                  <div>
                    <h4 class="font-bold text-lg mb-1">Call Us</h4>
                    <p>+1 (555) 123-HOOP<br />Mon-Fri: 8am-6pm</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <i class="fas fa-envelope mt-1 text-accent-text text-xl mr-4"></i>
                  <div>
                    <h4 class="font-bold text-lg mb-1">Email Us</h4>
                    <p>info@hoopshavencentral.com</p>
                  </div>
                </div>
                
                <div class="pt-6">
                  <h4 class="font-bold text-lg mb-4">Follow Our Journey</h4>
                  <div class="flex space-x-4">
                    {socialLinks.map((social) => (
                      <a href={social.url} class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center hover:bg-white/30 transition-colors">
                        <i class={`${social.icon} text-white`}></i>
                      </a>
                    ))}
                  </div>
                </div>
              </div>
            </div>
            
            <div class="md:w-1/2 p-10">
              <form class="space-y-6">
                <div>
                  <label for="name" class="block text-gray-700 font-medium mb-2">Full Name</label>
                  <input type="text" id="name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Your name">
                </div>
                
                <div>
                  <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                  <input type="email" id="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="your.email@example.com">
                </div>
                
                <div>
                  <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
                  <input type="text" id="subject" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="How can we help?">
                </div>
                
                <div>
                  <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
                  <textarea id="message" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent" placeholder="Tell us about your inquiry..."></textarea>
                </div>
                
                <button type="submit" class="w-full bg-primary hover:bg-[#0a3524] text-white font-bold py-3 px-6 rounded-lg transition duration-300 transform hover:scale-[1.02]">
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="serif-font text-4xl font-bold text-primary mb-4">Find Us Here</h2>
        <p class="sans-serif-font text-lg text-gray-700 max-w-2xl mx-auto">
          Located in the heart of basketball culture, we're easily accessible from major transportation hubs.
        </p>
      </div>
      
      <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-96 flex items-center justify-center">
        <div class="text-center">
          <i class="fas fa-map-marked-alt text-4xl text-gray-400 mb-4"></i>
          <p class="text-gray-500">Interactive Map Placeholder</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 hero-gradient">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="serif-font text-4xl md:text-5xl font-bold text-white mb-6">Ready to Elevate Your Game?</h2>
        <p class="sans-serif-font text-xl text-white/90 mb-10 max-w-2xl mx-auto">
          Whether you're interested in personal coaching, joining our training program, or learning more about our services, 
          we're excited to hear from you!
        </p>
        <a href="#" class="inline-block bg-white text-primary font-bold py-3 px-8 rounded-full hover:bg-gray-100 transition duration-300">
          Schedule a Consultation
        </a>
      </div>
    </div>
  </section>
</Layout>