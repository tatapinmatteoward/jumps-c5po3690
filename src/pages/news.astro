---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Latest Basketball News";
const pageDescription = "Stay updated with the hottest stories, game recaps, and player insights from the world of professional basketball on CourtVision Daily.";

const featuredNews = [
  {
    id: 1,
    title: "NBA Playoffs: Lakers Edge Warriors in Thriller",
    excerpt: "The Los Angeles Lakers pulled off a stunning comeback victory against the Golden State Warriors in Game 3 of the Western Conference Semifinals.",
    date: "May 15, 2023",
    author: "Michael Rodriguez",
    readTime: "4 min read"
  },
  {
    id: 2,
    title: "Trade Deadline Analysis: What's Next for the Lakers?",
    excerpt: "With the trade deadline approaching, we break down the potential moves the Lakers might make to bolster their championship chances.",
    date: "May 12, 2023",
    author: "Sarah Kim",
    readTime: "6 min read"
  },
  {
    id: 3,
    title: "Rising Star of the Week: Ja Morant's Dominance",
   excerpt: "The Grizzlies' young star continues to make waves with incredible performances that have analysts buzzing.",
    date: "May 10, 2023",
    author: "David Chen",
    readTime: "3 min read"
  }
];

const newsHighlights = [
  { stat: "28", label: "Points by LeBron James", highlight: true },
  { stat: "32", label: "Points by Stephen Curry" },
  { stat: "22", label: "Points by Anthony Davis" },
  { stat: "15", label: "Rebounds by Anthony Davis" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
    {`
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
      }
      .animate-float {
        animation: float 3s ease-in-out infinite;
      }
      .gradient-text {
        background: linear-gradient(to right, #ffb300, #ff9800);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }
    `}
  </style>

  {/* Hero Section */}
  <div class="relative bg-gradient-to-br from-[#0c1426] to-[#1a233a] overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 py-24 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1 bg-[#ffb300] text-[#0c1426] font-bold rounded-full mb-6">BREAKING NEWS</span>
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Latest Basketball <span class="gradient-text">News</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl">
          Stay updated with the hottest stories, game recaps, and player insights from the world of professional basketball on CourtVision Daily.
        </p>
        <div class="flex flex-wrap gap-4">
          <button class="px-8 py-3 bg-[#ffb300] text-[#0c1426] font-bold rounded-full hover:bg-[#ff9800] transition-all duration-300 transform hover:scale-105">
            Read Latest Stories
          </button>
          <button class="px-8 py-3 border-2 border-white text-white font-bold rounded-full hover:bg-white hover:text-[#0c1426] transition-all duration-300">
            Subscribe to Newsletter
          </button>
        </div>
      </div>
    </div>
  </div>

  {/* Featured Article Section */}
  <section class="py-16 bg-[#0a101f]">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="lg:w-1/2">
          <div class="bg-gradient-to-r from-[#0c1426] to-[#1a233a] rounded-2xl overflow-hidden shadow-2xl border border-gray-800">
            <div class="p-8">
              <span class="inline-block px-3 py-1 bg-[#ffb300] text-[#0c1426] font-bold rounded-full text-sm mb-4">FEATURED</span>
              <h2 class="text-3xl font-bold text-white mb-4">NBA Playoffs: Lakers Edge Warriors in Thriller</h2>
              <p class="text-gray-300 mb-6">
                The Los Angeles Lakers pulled off a stunning comeback victory against the Golden State Warriors in Game 3 of the Western Conference Semifinals. Trailing by 12 points in the fourth quarter, LeBron James dropped 28 points, including a game-winning three-pointer with 2.3 seconds left.
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 rounded-full bg-gradient-to-r from-[#ffb300] to-[#ff9800] flex items-center justify-center font-bold text-[#0c1426]">LR</div>
                  <div>
                    <p class="text-white font-medium">LeBron James</p>
                    <p class="text-gray-400 text-sm">June 8, 2023</p>
                  </div>
                </div>
                <span class="text-gray-400 text-sm">8 min read</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <h3 class="text-2xl font-bold text-white mb-6">Key Highlights</h3>
          
          <div class="space-y-6">
            {newsHighlights.map((highlight, index) => (
              <div key={index} class={`p-6 rounded-xl ${highlight.highlight ? 'bg-gradient-to-r from-[#ffb300]/10 to-[#ff9800]/10 border border-[#ffb300]/30' : 'bg-gray-800/50'} transition-all duration-300`}>
                <div class="flex items-start">
                  <div class="mr-4">
                    <span class={`text-3xl font-bold ${highlight.highlight ? 'text-[#ffb300]' : 'text-white'}`}>
                      {highlight.stat}
                    </span>
                  </div>
                  <p class="text-gray-300 mt-1">{highlight.label}</p>
                </div>
              </div>
            ))}
          </div>
          
          <div class="mt-8 p-6 bg-gradient-to-r from-[#0c1426] to-[#1a233a] rounded-xl border border-gray-800">
            <h4 class="text-xl font-bold text-white mb-3">Series Status</h4>
            <p class="text-gray-300 mb-4">The Lakers now lead the series 2-1</p>
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-full bg-gradient-to-r from-[#ffb300] to-[#ff9800] flex items-center justify-center mr-3">
                <i class="fas fa-basketball-ball text-[#0c1426] text-xl"></i>
              </div>
              <div>
                <p class="text-white font-medium">Los Angeles Lakers</p>
                <p class="text-gray-400 text-sm">2 wins</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Latest News Grid */}
  <section class="py-20 bg-[#0a101f]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">More Basketball News</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Explore our latest articles covering all aspects of professional basketball</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredNews.map((article) => (
          <article key={article.id} class="news-card bg-gradient-to-br from-[#0c1426] to-[#1a233a] rounded-2xl overflow-hidden border border-gray-800 transition-all duration-300 hover:border-[#ffb300]">
            <div class="p-6">
              <div class="flex justify-between items-start mb-4">
                <span class="text-xs font-bold uppercase tracking-wider text-[#ffb300] bg-[#ffb300]/10 px-2 py-1 rounded">
                  {article.date}
                </span>
                <span class="text-xs text-gray-400">{article.readTime}</span>
              </div>
              
              <h3 class="text-xl font-bold text-white mb-3">{article.title}</h3>
              <p class="text-gray-300 mb-4">{article.excerpt}</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-8 h-8 rounded-full bg-gradient-to-r from-[#ffb300] to-[#ff9800] flex items-center justify-center font-bold text-[#0c1426] text-sm mr-2">MR</div>
                  <span class="text-gray-400 text-sm">{article.author}</span>
                </div>
                <button class="text-[#ffb300] hover:text-[#ff9800] text-sm font-bold flex items-center">
                  Read More <i class="fas fa-arrow-right ml-2 text-xs"></i>
                </button>
              </div>
            </div>
          </article>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <button class="px-8 py-3 border-2 border-[#ffb300] text-[#ffb300] font-bold rounded-full hover:bg-[#ffb300] hover:text-[#0c1426] transition-all duration-300">
          View All Articles
        </button>
      </div>
    </div>
  </section>

  {/* Newsletter CTA */}
  <section class="py-20 bg-gradient-to-r from-[#0c1426] to-[#1a233a] border-y border-gray-800">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Never Miss a Beat</h2>
        <p class="text-gray-300 mb-8 text-lg">Subscribe to our newsletter for daily basketball updates and exclusive insights</p>
        
        <div class="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-6 py-4 bg-[#0a101f] border border-gray-700 rounded-full text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#ffb300]"
          />
          <button class="px-8 py-4 bg-[#ffb300] text-[#0c1426] font-bold rounded-full hover:bg-[#ff9800] transition-all duration-300 whitespace-nowrap">
            Subscribe Now
          </button>
        </div>
        
        <p class="text-gray-500 text-sm mt-4">Join over 25,000 basketball enthusiasts</p>
      </div>
    </div>
  </section>
</Layout>